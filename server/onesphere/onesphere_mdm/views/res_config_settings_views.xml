<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="onesphere_mdm_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">onesphere_mdm_res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="onesphere_core.onesphere_core_res_config_settings_view_form_inherit"/>
            <field name="arch" type="xml">
                <div id="mrp_workorder_operation_merge" position="after">
                    <div class="col-lg-6 col-12 o_setting_box" id="send_operation_all_step"
                         title="Send all steps in operations when you push operations to workcenter,not only tightening type.">
                        <div class="o_setting_left_pane">
                            <field name="send_operation_all_step"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_operation_all_step"/>
                            <div class="text-muted">
                                Send all steps in operations when you push operations to workcenters, not only tightening type.
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>