<odoo>
    <data>
        <record id="template_download_view_form" model="ir.ui.view">
            <field name="name">template_download_view_form</field>
            <field name="model">template.download</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" required="1"/>
                        <field name="description"/>
                        <field name="template_file" required="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="template_download_view_tree" model="ir.ui.view">
            <field name="name">template_download_view_tree</field>
            <field name="model">template.download</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="template_file"/>
                </tree>
            </field>
        </record>

        <record id="template_download_action_server" model="ir.actions.server">
                <field name="name">Template Download</field>
                <field name="model_id" ref="onesphere_assembly_industry.model_template_download"/>
                <field name="binding_model_id" ref="onesphere_assembly_industry.model_template_download"/>
                <field name="binding_view_types">list</field>
                <field name="state">code</field>
                <field name="code">
                if records:
                    action = records.template_download()
                </field>
            </record>

        <record id="template_download_action" model="ir.actions.act_window">
            <field name="name">Template Download Action</field>
            <field name="res_model">template.download</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_template_download"
                name="Template Download"
                action="template_download_action"
                parent="menu_mdm_import"
                sequence="20"/>

    </data>
</odoo>