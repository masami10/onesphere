<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="onesphere_wave_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">onesphere_wave_res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id='about' position="before">
                <h2>Tightening Curves</h2>
                <div class="row mt16 o_settings_container" name="oss_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="module_onesphere_oss">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label for="download_tightening_results_limit" class="o_light_label"/>
                                <field name="download_tightening_results_limit"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>


